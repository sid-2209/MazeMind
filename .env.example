# Maze Mind Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# WEEK 1: No API keys needed yet
# ============================================

# ============================================
# WEEK 2+: LLM API Configuration
# ============================================

# LLM Provider Selection
# Options: "heuristic" | "ollama" | "anthropic"
# - heuristic: Simple pathfinding, no LLM (default, always available)
# - ollama: Local open-source models (requires Ollama installed)
# - anthropic: Claude API (requires API key)
VITE_LLM_PROVIDER=heuristic

# Anthropic Claude API
# Get your API key from: https://console.anthropic.com/
# Required for: Memory embeddings, Claude-powered decisions
# Note: VITE_ prefix required for Vite to expose to browser
VITE_ANTHROPIC_API_KEY=sk-ant-your-key-here

# Ollama Configuration (for local LLM)
# Install Ollama: https://ollama.ai/
# Recommended models:
#   - llama3.2:3b-instruct-q4_K_M (best balance, 4GB RAM)
#   - llama3.2:1b-instruct-q4_0 (fastest, 2GB RAM)
#   - llama3.1:8b-instruct-q4_K_M (best quality, 8GB RAM)
# Pull model: ollama pull llama3.2:3b-instruct-q4_K_M
VITE_OLLAMA_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama3.2:3b-instruct-q4_K_M

# ============================================
# WEEK 2 DAYS 1-2: Embedding Provider Configuration
# ============================================

# Embedding Provider Selection
# Options: "openai" | "voyage" | "ollama"
# - openai: OpenAI text-embedding-3-small (1536D, $0.02/1M tokens, best balance)
# - voyage: Voyage AI voyage-2 (1024D, $0.12/1M tokens, best quality)
# - ollama: Local nomic-embed-text (768D, free, requires model: ollama pull nomic-embed-text)
# Falls back automatically: openai → ollama → fake heuristic
VITE_EMBEDDING_PROVIDER=openai

# OpenAI API (for embeddings)
# Get your API key from: https://platform.openai.com/api-keys
# Required for: Real semantic embeddings in memory retrieval
# Cost: ~$0.02 per 1M tokens (~1000 memories = $0.01)
VITE_OPENAI_API_KEY=your-openai-api-key-here

# Voyage AI API (optional, higher quality embeddings)
# Get your API key from: https://www.voyageai.com/
# Required for: Best-in-class retrieval quality
# Cost: ~$0.12 per 1M tokens (6x more expensive than OpenAI)
VITE_VOYAGE_API_KEY=your-voyage-api-key-here

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_DIRECTORY=./logs

# ============================================
# Simulation Configuration
# ============================================
# Time acceleration (1 real second = X game seconds)
TIME_SCALE=10

# Enable debug mode by default
DEBUG_MODE=true

# ============================================
# Data Collection
# ============================================
# Where to save simulation data
DATA_DIRECTORY=./data/simulations

# Enable metrics collection
COLLECT_METRICS=true

# ============================================
# Development Settings
# ============================================
# Development server port
VITE_PORT=3000

# Enable hot module replacement
VITE_HMR=true
